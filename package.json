{
  "name": "makemytrip-cypress-automation",
  "version": "1.0.0",
  "description": "Cypress automation framework for MakeMyTrip website testing",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",
    "cy:run:headed": "cypress run --headed",
    "cy:dashboard": "cypress run --record --key your-record-key",
    "test": "cypress run",
    "test:headed": "cypress run --headed",
    "report": "cypress run --reporter mochawesome",
    "report:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/merged-report.json",
    "report:generate": "marge cypress/reports/merged-report.json --reportDir cypress/reports --inline"
  },
  "keywords": [
    "cypress",
    "automation",
    "testing",
    "makemytrip",
    "e2e"
  ],
  "author": "Test Automation Team",
  "license": "MIT",
  "devDependencies": {
    "cypress": "^13.6.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "@cypress/grep": "^4.0.1"
  }
}